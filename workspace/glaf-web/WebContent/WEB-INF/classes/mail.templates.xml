<?xml version="1.0" encoding="GBK"?>
<mail-templates>

  <variable name="BaseTaskListURL" value="http://localhost:8080/glaf/workflow/task.jsp?taskId=" />

  <mail-template name="default">
    <subject>您的新任务 '#{taskDescription}'</subject>
    <datafile>task_running.html</datafile>
  </mail-template>

  <mail-template name="task_finished">
    <subject>您的申请已经处理完成。</subject>
    <datafile>task_finished.html</datafile>
  </mail-template>
  
  <mail-template name="glaf_todo">
    <subject>ToDo事项</subject>
    <datafile>todo-velocity.html</datafile>
  </mail-template>

   <mail-template name="glaf_todo_ccxy">
    <subject>ToDo事项</subject>
    <datafile>todo-cc-velocity.html</datafile>
  </mail-template>

</mail-templates>