<?xml version="1.0" encoding="UTF-8"?>

<process-definition xmlns="urn:jbpm.org:jpdl-3.2"
	name="SalesContractProcess">
	<description>售车合同申请审批流程</description>
	<swimlane name="starter">
		<assignment class="com.glaf.jbpm.assignment.GeneralAssignment"></assignment>
	</swimlane>
	<swimlane name="submiter">
		<assignment
			class="com.glaf.jbpm.assignment.ProcessStarterAssignment"></assignment>
	</swimlane>
	
	<action name="create_task01"
		class="com.glaf.jbpm.action.SqlMapTaskInstanceAction">
		<leaveNodeIfActorNotAvailable>true</leaveNodeIfActorNotAvailable>
		<taskName>task01</taskName>
		<queryId>getXYDeptRoleUsers</queryId>
		<roleId>R013</roleId>
		<deptId>#P{deptId01}</deptId>
	</action>

	<action name="create_task02"
		class="com.glaf.jbpm.action.SqlMapTaskInstanceAction">
		<leaveNodeIfActorNotAvailable>true</leaveNodeIfActorNotAvailable>
		<taskName>task02</taskName>
		<queryId>getXYDeptRoleUsers</queryId>
		<roleId>R016</roleId>
		<deptId>#P{deptId02}</deptId>
	</action>

	

	<action name="create_task03"
		class="com.glaf.jbpm.action.SqlMapTaskInstanceAction">
		<leaveNodeIfActorNotAvailable>true</leaveNodeIfActorNotAvailable>
		<taskName>task03</taskName>
		<queryId>getXYDeptRoleUsers</queryId>
		<roleId>R014</roleId>
		<deptId>#P{deptId03}</deptId>
	</action>

	<action name="create_task04"
		class="com.glaf.jbpm.action.SqlMapTaskInstanceAction">
		<leaveNodeIfActorNotAvailable>true</leaveNodeIfActorNotAvailable>
		<taskName>task04</taskName>
		<queryId>getXYDeptRoleUsers</queryId>
		<roleId>R015</roleId>
		<deptId>#P{deptId04}</deptId>
	</action>

	<action name="salescontract_1000" class="com.glaf.jbpm.action.SQLAction">
		<sql>UPDATE OA_SALESCONTRACT SET PROCESSNAME = 'SalesContractProcess',STATUS = 1,
			PROCESSINSTANCEID = ?, WFSTATUS = 1000 WHERE ID = ?</sql>
		<elements element-type="org.dom4j.Element">
			<element value-type="java.lang.String">
				<key>processInstanceId</key>
				<value>#{processInstanceId}</value>
			</element>
			<element value-type="java.lang.String">
				<key>rowId</key>
				<value>#{rowId}</value>
			</element>
		</elements>
	</action>	

	<action name="salescontract_1001" class="com.glaf.jbpm.action.SQLAction">
		<sql>UPDATE OA_SALESCONTRACT SET WFSTATUS= 1001 WHERE ID = ?</sql>
		<elements element-type="org.dom4j.Element">
			<element value-type="java.lang.String">
				<key>rowId</key>
				<value>#{rowId}</value>
			</element>
		</elements>
	</action>

	<action name="salescontract_1002" class="com.glaf.jbpm.action.SQLAction">
		<sql>UPDATE OA_SALESCONTRACT SET WFSTATUS= 1002 WHERE ID = ?</sql>
		<elements element-type="org.dom4j.Element">
			<element value-type="java.lang.String">
				<key>rowId</key>
				<value>#{rowId}</value>
			</element>
		</elements>
	</action>

	<action name="salescontract_1003" class="com.glaf.jbpm.action.SQLAction">
		<sql>UPDATE OA_SALESCONTRACT SET WFSTATUS= 1003 WHERE ID = ?</sql>
		<elements element-type="org.dom4j.Element">
			<element value-type="java.lang.String">
				<key>rowId</key>
				<value>#{rowId}</value>
			</element>
		</elements>
	</action>

	<action name="salescontract_1004" class="com.glaf.jbpm.action.SQLAction">
		<sql>UPDATE OA_SALESCONTRACT SET WFSTATUS= 1004 WHERE ID = ?</sql>
		<elements element-type="org.dom4j.Element">
			<element value-type="java.lang.String">
				<key>rowId</key>
				<value>#{rowId}</value>
			</element>
		</elements>
	</action>
	
	<action name="salescontract_5555" class="com.glaf.jbpm.action.SQLAction"> 
    <sql>UPDATE OA_SALESCONTRACT SET WFSTATUS = -5555, STATUS = 3 WHERE ID = ?</sql>  
    <elements element-type="org.dom4j.Element"> 
      <element value-type="java.lang.String"> 
        <key>rowId</key>  
        <value>#{rowId}</value> 
      </element> 
    </elements> 
  </action>
  
  <action name="salescontract_9999" class="com.glaf.jbpm.action.SQLAction"> 
    <sql>UPDATE OA_SALESCONTRACT SET STATUS = 2, WFSTATUS = 9999 WHERE ID = ?</sql>  
    <elements element-type="org.dom4j.Element"> 
      <element value-type="java.lang.String"> 
        <key>rowId</key>  
        <value>#{rowId}</value> 
      </element> 
    </elements> 
  </action>
   
  <action name="EndCounterSigningAction" class="com.glaf.jbpm.action.EndCounterSigningAction"> 
    <expression>#{isAgree eq 'false'}</expression> 
  </action>


	<start-state name="启动流程">
		<task name="task0" description="启动流程" swimlane="starter">
			<controller>
				<variable name="isAgree" access="read,write,required"
					mapped-name="isAgree" />
			</controller>
			<event type="task-create">
				<action ref-name="salescontract_1000" />
			</event>
		</task>
		<transition to="财务审核" name="提交"></transition>
	</start-state>

	<task-node name="财务审核"  create-tasks="false" end-tasks="true">
		<event type="node-enter">
			<action ref-name="salescontract_1001" />
			<action ref-name="create_task01" />
		</event>
		<transition to="财务审核通过？" name="判断"></transition>
		<task name="task01" description="财务审核">
			<event type="task-end">
				<action ref-name="EndCounterSigningAction" />
			</event>
		</task>
	</task-node>

	<decision name="财务审核通过？">
		<transition to="审核不通过" name="不通过">
		</transition>
		<transition to="销售经理审核" name="通过">
			<condition expression="#{isAgree eq 'true'}" />
		</transition>		
	</decision>

	<task-node name="销售经理审核"  create-tasks="false" end-tasks="true">
		<event type="node-enter">
			<action ref-name="salescontract_1002" />
			<action ref-name="create_task02" />
		</event>
		<transition to="销售经理审核通过？" name="判断"></transition>
		<task name="task02" description="销售经理审核">
			<event type="task-end">
				<action ref-name="EndCounterSigningAction" />
			</event>
		</task>
	</task-node>

	<decision name="销售经理审核通过？">
		<transition to="审核不通过" name="不通过"></transition>
		<transition to="销售总监审核" name="通过">
		    <condition expression="#{isAgree eq 'true'}" />
		</transition>	
	</decision>


	<task-node name="销售总监审核"  create-tasks="false" end-tasks="true">
		<event type="node-enter">
			<action ref-name="salescontract_1004" />
			<action ref-name="create_task04" />
		</event>
		<transition to="销售总监审核通过？" name="判断"></transition>
		<task name="task04" description="销售总监审核">
			<event type="task-end">
				<action ref-name="EndCounterSigningAction" />
			</event>
		</task>
	</task-node>

	<decision name="销售总监审核通过？">
		<transition to="审核不通过" name="不通过"></transition>
		<transition to="总经理审核" name="通过">
		    <condition expression="#{isAgree eq 'true'}" />
		</transition>
	</decision>


	<task-node name="总经理审核"  create-tasks="false" end-tasks="true">
		<event type="node-enter">
			<action ref-name="salescontract_1003" />
			<action ref-name="create_task03" />
		</event>
		<transition to="总经理审核通过？" name="判断"></transition>
		<task name="task03" description="总经理审核">
			<event type="task-end">
				<action ref-name="EndCounterSigningAction" />
			</event>
		</task>
	</task-node>

	<decision name="总经理审核通过？">	
		<transition to="审核不通过" name="不通过"></transition>
		<transition to="流程结束" name="通过">
		    <condition expression="#{isAgree eq 'true'}" />
		</transition>
	</decision>

	<node name="审核不通过">
		<event type="node-enter">
			<action ref-name="salescontract_5555" />
		</event>
		<transition to="重新修改" name="退回"></transition>
	</node>

	<task-node name="重新修改" >
		<transition to="财务审核" name="重新提交"></transition>
		<task name="task555" description="重新修改" swimlane="submiter"></task>
	</task-node>

	<end-state name="流程结束">
		<event type="node-enter">
			<action ref-name="salescontract_9999" />
		</event>
	</end-state>

</process-definition>