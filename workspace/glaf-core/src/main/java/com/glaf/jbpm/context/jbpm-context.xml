<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="sqlMapClient" class="com.glaf.jbpm.db.mybatis2.SqlMapClientFactoryBean">
		<property name="configLocations">
			<value>classpath:resources/sqlmap/context/**/*-config.xml</value>
		</property>
		<property name="mappingLocations">
			<list>
				<value>classpath:resources/sqlmap/mapping/**/*.xml</value>
				<value>classpath:com/glaf/**/mapping/*.sqlmap.xml</value>
			</list>
		</property>
	</bean>

	<bean id="sqlMapClientDAO" class="com.glaf.jbpm.db.mybatis2.SqlMapClientDAOImpl"
		init-method="initialize">
		<property name="sqlMapClient" ref="sqlMapClient" />
	</bean>
	
	<bean id="sqlMapEntityService" class="com.glaf.jbpm.db.mybatis2.SqlMapEntityServiceImpl">
		<property name="entityDAO" ref="sqlMapClientDAO" />
	</bean> 

</beans>