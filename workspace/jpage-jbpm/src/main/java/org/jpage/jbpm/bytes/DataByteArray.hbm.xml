<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
  <class name="org.jpage.jbpm.bytes.DataByteArray" table="JPAGE_JBPM_DATA_BYTEARRAY">
    <id name="id" column="ID_">
	  <generator class="native" />
	</id>
    <property name="name" column="NAME_"  type="string" length="255"/>
	<property name="actorId" column="ACTORID_" type="string" length="255"/>
	<property name="objectId" column="OBJECTID_" type="string" length="255"/>
    <property name="objectValue" column="OBJECTVALUE_" type="string" length="255"/>
    <property name="createDate" column="CREATEDATE_" type="timestamp"/>
    <property name="objectType" column="OBJECTTYPE_" type="int"/>
    <property name="versionNo" column="VERSIONNO_" type="long"/>
	<property name="processInstanceId" column="PROCESSINSTANCEID_" type="string" length="255"/>
    <list name="byteBlocks" 
          table="JPAGE_JBPM_DATA_BYTEBLOCK" 
          cascade="all">
      <key column="DATAFILE_" foreign-key="FK_DATA_BYTE_BLOCK" />
      <list-index column="INDEX_" />
      <element type="binary" length="1024" column="BYTES_" />
    </list>
  </class>
</hibernate-mapping>
