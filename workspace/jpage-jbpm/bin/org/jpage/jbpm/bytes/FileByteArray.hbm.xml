<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field">
  <class name="org.jpage.jbpm.bytes.FileByteArray" table="JPAGE_JBPM_BYTEARRAY">
    <id name="id" column="ID_">
	  <generator class="native" />
	</id>
    <property name="name" column="NAME_"  type="string" length="255"/>
	<property name="processInstanceId" column="PROCESSINSTANCEID_" type="string" length="255"/>
    <list name="byteBlocks" 
          table="JPAGE_JBPM_BYTEBLOCK" 
          cascade="all">
      <key column="DATAFILE_" foreign-key="FK_FILE_BYTE_BLOCK" />
      <list-index column="INDEX_" />
      <element type="binary" length="1024" column="BYTES_" />
    </list>
  </class>
</hibernate-mapping>
